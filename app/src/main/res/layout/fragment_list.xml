<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="125dp"
        android:text="@string/rate_your_favorite_animal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/press_on_the_images_below_to_rate_your_favorite_animal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <ImageButton
        android:id="@+id/dog_imageButton"
        android:layout_width="153dp"
        android:layout_height="139dp"
        android:layout_marginStart="28dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <ImageButton
        android:id="@+id/cat_imageButton"
        android:layout_width="161dp"
        android:layout_height="139dp"
        android:layout_marginStart="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cat"
        app:layout_constraintStart_toEndOf="@+id/dog_imageButton"
        app:layout_constraintTop_toBottomOf="@+id/instructions" />

    <ImageButton
        android:id="@+id/bear_imageButton"
        android:layout_width="149dp"
        android:layout_height="137dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_rating" />

    <ImageButton
        android:id="@+id/rabbit_imageButton"
        android:layout_width="163dp"
        android:layout_height="135dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/rabbit"
        app:layout_constraintStart_toEndOf="@+id/bear_imageButton"
        app:layout_constraintTop_toBottomOf="@+id/cat_rating" />

    <TextView
        android:id="@+id/dog_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Your Rating: -"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dog_imageButton" />

    <TextView
        android:id="@+id/cat_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="Your Rating: -"
        app:layout_constraintStart_toEndOf="@+id/dog_rating"
        app:layout_constraintTop_toBottomOf="@+id/cat_imageButton" />

    <TextView
        android:id="@+id/bear_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="2dp"
        android:text="Your Rating: -"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bear_imageButton" />

    <TextView
        android:id="@+id/rabbit_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="124dp"
        android:layout_marginTop="4dp"
        android:text="Your Rating: -"
        app:layout_constraintStart_toEndOf="@+id/bear_rating"
        app:layout_constraintTop_toBottomOf="@+id/rabbit_imageButton" />
</androidx.constraintlayout.widget.ConstraintLayout>